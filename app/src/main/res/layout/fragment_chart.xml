<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fragment_chart_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/fragment_chart_pie"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fragment_chart_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/fragment_chart_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/tenDP">
            <TextView
                android:id="@+id/fragment_chart_dot1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/fiveDP"
                android:background="@drawable/dot_style"/>
            <TextView
                android:id="@+id/fragment_chart_dot2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/fiveDP"
                android:background="@drawable/dot_style"/>
            <TextView
                android:id="@+id/fragment_chart_dot3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/fiveDP"
                android:background="@drawable/dot_style"/>
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/fragment_chart_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/grid_result"
            android:textSize="@dimen/thirtySp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/fifteenDp"
            android:text="è¡¨"/>

</FrameLayout>